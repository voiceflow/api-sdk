    "@voiceflow/common": "^6.2.0",
    "@voiceflow/logger": "^1.1.0",
    "@voiceflow/secrets-provider": "^1.6.1",
    "@voiceflow/verror": "^1.1.0",
    "aws-sdk": "^2.586.0",
    "axios": "^0.19.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.4.8",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-bunyan-logger": "^1.3.3",
    "express-validator": "^6.3.0",
    "helmet": "^3.21.2",
    "lodash": "^4.17.15",
    "luxon": "^1.21.3",
    "pg": "^7.14.0",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bunyan-prettystream": "^0.1.31",
    "@types/chai": "^4.2.7",
    "@types/compression": "^1.0.1",
    "@types/connect-timeout": "^0.0.34",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-bunyan-logger": "^1.3.2",
    "@types/hashids": "^1.0.30",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/pg": "^7.14.0",
    "@types/sinon": "^7.5.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "@voiceflow/commitlint-config": "^1.0.1",
    "@voiceflow/database": "^1.13.1",
    "@voiceflow/eslint-config": "^2.0.4",
    "@voiceflow/git-branch-check": "^1.0.6",
    "@voiceflow/prettier-config": "^1.0.4",
    "@zerollup/ts-transform-paths": "^1.7.9",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "fixpack": "^2.3.1",
    "husky": "^3.1.0",
    "knex": "^0.20.4",
    "knex-cleaner": "^1.3.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.31",
    "sinon": "^7.5.0",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.8",
    "typescript": "^3.7.4"
  },
  "homepage": "https://github.com/voiceflow/backend-template#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "git-branch-check"
    }
  },
  "license": "ISC",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "prettier": "@voiceflow/prettier-config",
  "release": {
    "branch": "production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voiceflow/backend-template.git"
  },
  "scripts": {
    "build": "npm run clean && ttsc --project ./tsconfig.build.json",
    "clean": "rimraf build",
    "deploy:staging": "git push origin $(git branch | grep \\* | cut -d ' ' -f2):staging -f",
    "gen-certs": "scripts/generate_certs.sh",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "local": "NODE_ENV=local ts-node --files -r tsconfig-paths/register start.ts",
    "local:watch": "NODE_ENV=local forever --watch -c \"ts-node -r tsconfig-paths/register\" start.ts",
    "start": "NODE_ENV=production node --max-old-space-size=8192 build/start.js",
    "test": "NODE_ENV=test nyc ts-mocha --paths --opts mocha.opts"
  }
}
